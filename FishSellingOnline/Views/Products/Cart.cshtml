@model IEnumerable<FishSellingOnline.Models.Cart>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Products/";
}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cartitem in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => cartitem.ProductName)
                </td>
                <td>
                    @if (cartitem.ProductImage != null)
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(cartitem.ProductImage))" />
                    }
                    else
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cartitem.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cartitem.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cartitem.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cartitem.Total)
                </td>
                <td>
                    <a asp-action="DeleteCart" asp-route-id="@cartitem.CartID">Delete</a>
                </td>
                <td>
                    <a asp-action="CartDetails" asp-route-id="@cartitem.CartID">Details</a>
                </td>
                <td>
                    <a asp-action="Checkout" asp-route-id="@cartitem.CartID">Proceed Checkout</a>
                </td>
            </tr>
        }
    </tbody>
</table>